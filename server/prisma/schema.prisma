// 2. Database Schema (Prisma)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Visit {
  id         Int    @id @default(autoincrement())
  site_id    String
  ip_address String

  // Enriched Data
  city        String?
  country     String?
  countryCode String?
  asn         String?
  org         String?

  // User Agent Data
  browser String?
  os      String?
  device  String?

  referrer   String?
  user_agent String?

  created_at DateTime @default(now())

  @@index([site_id, created_at])
  @@index([created_at])
}
